{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "sourceMap": true,
    "removeComments": true,
    "rootDir": "./src",
    "incremental": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*.tsx"],
  "exclude": ["node_modules"]
}